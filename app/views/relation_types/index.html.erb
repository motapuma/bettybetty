<h1>Listing relation_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relation_types.each do |relation_type| %>
      <tr>
        <td><%= relation_type.name %></td>
        <td><%= link_to 'Show', relation_type %></td>
        <td><%= link_to 'Edit', edit_relation_type_path(relation_type) %></td>
        <td><%= link_to 'Destroy', relation_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

