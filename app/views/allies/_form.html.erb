      <% @ally.nicknames.each do |nn| %>
        <li>
          <%=nn.nick%>
         </li> 
      <%end%>
  </ul>
  

  <%= f.fields_for :nicknames,@ally.nicknames.build do |nn|%>
    <%= f.label :nick %><%= nn.text_field :nick%>
  <%end%>

