<h1>Listing relations</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Ally</th>
      <th>Candidate</th>
      <th>Relation type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relations.each do |relation| %>
      <tr>
        <td><%= relation.link_id %></td>
        <td><%= relation.ally_id %></td>
        <td><%= relation.candidate_id %></td>
        <td><%= relation.relation_type_id %></td>
        <td><%= link_to 'Show', relation %></td>
        <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
        <td><%= link_to 'Destroy', relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relation', new_relation_path %>
